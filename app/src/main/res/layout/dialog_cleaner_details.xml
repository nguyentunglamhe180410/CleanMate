<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Header -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin nhân viên"
        android:textStyle="bold"
        android:textColor="#122B82"
        android:textSize="20sp"
        android:gravity="center" />

    <!-- Avatar -->
    <ImageView
        android:id="@+id/dialogAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:src="@drawable/user_image"
        android:scaleType="centerCrop" />

    <!-- Fields -->
    <TextView android:id="@+id/dialogName" android:text="Tên nhân viên" android:textStyle="bold" android:paddingTop="12dp"/>
    <TextView android:id="@+id/dialogEmail" android:text="Email"/>
    <TextView android:id="@+id/dialogPhone" android:text="Số điện thoại"/>
    <TextView android:id="@+id/dialogExperience" android:text="Kinh nghiệm"/>
    <TextView android:id="@+id/dialogArea" android:text="Khu vực hoạt động"/>
    <TextView android:id="@+id/dialogAvailability" android:text="Trạng thái" />

</LinearLayout>
