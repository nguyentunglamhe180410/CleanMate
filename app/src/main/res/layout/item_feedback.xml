<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header với Booking Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Booking Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_booking_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking #101"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_cleaner_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cleaner: cleaner-001"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <!-- Rating Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rating_badge_background"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Rating Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá:"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:progressTint="#FBC11B"
                android:rating="4.5" />

        </LinearLayout>

        <!-- Feedback Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/feedback_content_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dịch vụ rất tốt, cleaner làm việc chuyên nghiệp và sạch sẽ!"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineHeight="20sp"
                android:fontStyle="italic" />

        </LinearLayout>

        <!-- Footer với Date và Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Created Date -->
            <TextView
                android:id="@+id/tv_created_at"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📅 15/01/2024 10:30"
                android:textSize="12sp"
                android:textColor="@color/gray" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="✏️"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_info"
                    android:minWidth="0dp"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="🗑️"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_secondary"
                    android:minWidth="0dp"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
