<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialogClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/dialogCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên khách hàng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/dialogDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày - Giờ"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/dialogRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đánh giá: 5★"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/dialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phản hồi chi tiết"
        android:gravity="center"
        android:textSize="14sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/dialogPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền: 500.000₫"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="12dp" />

</LinearLayout>
