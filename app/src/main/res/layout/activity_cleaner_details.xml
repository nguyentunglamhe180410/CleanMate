<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFFFFF">

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/loadingSpinner"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Card Container -->
    <LinearLayout
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_margin="24dp"
        android:elevation="4dp"
        android:clipToPadding="false">

        <!-- Header Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin nhân viên"
                android:textColor="#122B82"
                android:textStyle="bold"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <!-- Avatar & Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/user_image"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên nhân viên"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/employeeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã nhân viên: ---"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Info Labels -->
        <TextView android:id="@+id/emailLabel"
            style="@style/InfoLabel" android:text="Email"/>
        <TextView android:id="@+id/emailValue" style="@style/InfoValue" />

        <TextView android:id="@+id/phoneLabel"
            style="@style/InfoLabel" android:text="Số điện thoại"/>
        <TextView android:id="@+id/phoneValue" style="@style/InfoValue" />

        <TextView android:id="@+id/experienceLabel"
            style="@style/InfoLabel" android:text="Kinh nghiệm"/>
        <TextView android:id="@+id/experienceValue" style="@style/InfoValue" />

        <TextView android:id="@+id/areaLabel"
            style="@style/InfoLabel" android:text="Khu vực hoạt động"/>
        <TextView android:id="@+id/areaValue" style="@style/InfoValue" />

        <TextView android:id="@+id/statusLabel"
            style="@style/InfoLabel" android:text="Trạng thái"/>
        <TextView android:id="@+id/statusValue" style="@style/InfoValue" />

    </LinearLayout>
</RelativeLayout>
